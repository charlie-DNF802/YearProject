@model Ward_Management_System.Models.Appointment

@{
    ViewData["Title"] = "Discharge Patient";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid patient-dashboard py-5">
    <!-- Page Header -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-10 text-center">
            <h2 class="fw-bold text-primary">
                <i class="bi bi-box-arrow-right me-2"></i>
                Discharge Instructions for @Model.FullName
            </h2>
            <p class="text-muted">Provide and record discharge summary for the patient.</p>
        </div>
    </div>

    <!-- Discharge Form Card -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-file-medical me-2"></i>
                    <span>Discharge Summary</span>
                </div>
                <div class="card-body">
                    <form asp-action="MarkReadyForDischarge" asp-route-id="@Model.AppointmentId" method="post">
                        <div class="mb-3">
                            <label for="dischargeSummary" class="form-label fw-bold">
                                Summary / Notes
                            </label>
                            <textarea id="dischargeSummary"
                                      name="dischargeSummary"
                                      class="form-control shadow-sm"
                                      rows="5"
                                      placeholder="Enter discharge notes, follow-up instructions, or special care guidelines..."
                                      required></textarea>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="PatientList" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-1"></i> Mark as Ready To Be Discharged
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



