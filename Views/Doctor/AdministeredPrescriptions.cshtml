@model IEnumerable<Ward_Management_System.Models.PrescribedMedication>

@{
    ViewData["Title"] = "Administered Prescriptions";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    // Ensure the ViewBag contains the necessary data for pagination
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container-fluid patient-dashboard py-5">
    <div class="row justify-content-center mb-4 ">
        <div class="col-md-10 text-center">
            <h2 class="fw-bold text-primary">Completed (Administered) Prescriptions</h2>
            <p>View List Of administered prescriptions </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-sm">
                @if (!Model.Any())
                {
                    <div class="alert alert-info">You have no Completed/Administered prescriptions.</div>
                }
                else
                {

                    <div class="card-header d-flex justify-content-between align-items-center bg-light">
                        <h5 class="mb-0 fw-bold text-dark">Administered Prescriptions List</h5>
                        <a asp-action="ExportAdministeredPrescriptionsPDF" asp-controller="Reports"
                           class="btn btn-success shadow-sm">
                            <i class="bi bi-file-earmark-pdf"></i> Export to PDF
                        </a>
                    </div>

                    <div class="card-body">
                        <table class="table table-hover table-striped mb-0 align-middle" id="CompletedPrescriptionsTable">
                            <thead class="table-primary">
                                <tr>
                                    <th>#</th>
                                    <th>Medication</th>
                                    <th>Dosage</th>
                                    <th>Patient</th>
                                    <th>Date Prescribed</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = ((pager.CurrentPage - 1) * pager.PageSize) + 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.StockMedications?.Name</td>
                                        <td>@item.Dosage</td>
                                        <td>@item.Prescription?.Appointment?.FullName</td>
                                        <td>@item.Prescription?.PrescribedDate.ToString("dd/MM/yyyy")</td>

                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                        @*  Paging shared partial view *@
                        <div class="=container">
                            @if (pager.TotalPages > 0)
                            {
                                <ul class="pagination justify-content-end">
                                    @if (pager.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-controller="Doctor" asp-action="AdministeredPrescriptions" asp-route-pg="1">First</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" asp-controller="Doctor" asp-action="AdministeredPrescriptions" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                                        </li>
                                    }
                                    @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                                    {
                                        <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-controller="Doctor" asp-action="AdministeredPrescriptions" asp-route-pg="@pge">@pge</a>
                                        </li>
                                    }
                                    @if (pager.CurrentPage < pager.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-controller="Doctor" asp-action="AdministeredPrescriptions" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                                        </li>
                                        <li>
                                            <a class="page-link" asp-controller="Doctor" asp-action="AdministeredPrescriptions" asp-route-pg="@(pager.TotalPages)">Last</a>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- Back Button -->
        <div class="text-center mt-4">
            <a asp-action="MyPrescriptions" asp-controller="Doctor" class="btn btn-secondary px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back
            </a>
        </div>
    </div>
</div>

