@{
    ViewData["Title"] = "Nurse Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="user-background">
    <div class="main-content">
        <div class="content">
            <div class="container-fluid patient-dashboard py-5">
                <!-- Welcome Message -->
                <div class="row justify-content-center text-center mb-5">
                    <div class="col-lg-8">
                        <h3 class="display-4 fw-bold text-dark">Patient Care</h3>
                        <p class="lead text-muted">Record vitals, view instructions, treat patients & view prescriptions.</p>
                    </div>
                </div>

                <!-- Dashboard Cards -->
                <div class="row justify-content-center g-4 px-3 px-md-5 mb-3">

                    <!-- 1. Record Patient Vitals -->
                    <div class="col-md-6 col-xl-4">
                        <div class="card h-100 p-3 shadow dashboard-card border-warning-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-warning">
                                        <i class="bi bi-door-open-fill me-2"></i> Record Vitals
                                    </h5>
                                    <p class="card-text">Continuously record patient vitals with ease.</p>
                                </div>
                                <a asp-controller="Nurse" asp-action="PatientList" class="btn btn-warning mt-3 text-dark">Record Vitals</a>
                            </div>
                        </div>
                    </div>

                    <!-- 2. View Instructions -->
                    <div class="col-md-6 col-xl-4">
                        <div class="card h-100 p-3 shadow dashboard-card border-success-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-success">
                                        <i class="bi bi-box-arrow-right me-2"></i> View Instructions
                                    </h5>
                                    <p class="card-text">View doctor’s instructions for each patient.</p>
                                </div>
                                <a asp-controller="Nurse" asp-action="ViewInstructions" class="btn btn-success mt-3 position-relative">
                                    View
                                    @if (ViewBag.NewInstructionsCount != null && ViewBag.NewInstructionsCount > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                            @ViewBag.NewInstructionsCount
                                        </span>
                                    }
                                </a>

                            </div>
                        </div>
                    </div>

                    <!-- 3. Treat Patients -->
                    <div class="col-md-6 col-xl-4">
                        <div class="card h-100 p-3 shadow dashboard-card border-secondary-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-secondary">
                                        <i class="bi bi-hospital-fill me-2"></i> Treat Patients
                                    </h5>
                                    <p class="card-text">Change IV drips, catheters & dress wounds.</p>
                                </div>
                                <a asp-controller="Nurse" asp-action="TreatPatients" class="btn btn-secondary mt-3">Treat</a>
                            </div>
                        </div>
                    </div>

                    <!-- 4. View Prescribed Medications -->
                    <div class="col-md-6 col-xl-6">
                        <div class="card h-100 p-3 shadow dashboard-card border-info-subtle">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-info">
                                        <i class="bi bi-person-walking me-2"></i> View Prescribed Medication & Administer
                                    </h5>
                                    <p class="card-text">View prescribed medications and administer non-scheduled medication for patients.</p>
                                </div>
                                <a asp-controller="Nurse" asp-action="PendingPrescriptions" class="btn btn-info mt-3 text-white">View Prescription</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



