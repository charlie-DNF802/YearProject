@model Ward_Management_System.ViewModels.PatientMovementViewModel

@{
    ViewData["Title"] = "Patient Movement Tracking";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@if (TempData["ToastMessage"] != null)
{
    var toastType = TempData["ToastType"] ?? "success";
    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1080;">
            <div id="toastMessage" class="toast align-items-center text-bg-@toastType border-0 shadow" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["ToastMessage"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
}

<div class="container-fluid patient-dashboard py-5">
    <!-- Page Header -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-10 text-center">
            <h2 class="fw-bold text-primary">
                <i class="bi bi-arrows-move me-2"></i> Patient Movement Tracking
            </h2>
            <p class="text-muted">Track and update patient location movements.</p>
        </div>
    </div>

    <!-- Current Location Card -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h4 class="fw-bold">@Model.PatientName</h4>
                    <p class="mt-3">
                        <strong>Current Location:</strong>
                        <span class="badge bg-primary fs-6">@Model.CurrentLocation</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Movement Timeline -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-clock-history me-2"></i> Movement History
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.MovementHistory != null && Model.MovementHistory.Any())
                    {
                        @foreach (var move in Model.MovementHistory)
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <strong>@move.LocationName</strong>
                                    <span class="text-muted small">@move.MovementTime.ToString("dd MMM yyyy HH:mm")</span>
                                </div>
                                @if (!string.IsNullOrEmpty(move.Notes))
                                {
                                    <div class="text-muted small mt-1">
                                        <i class="bi bi-journal-text me-1"></i> @move.Notes
                                    </div>
                                }
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-center text-muted">
                            No movement history recorded.
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- Move Patient Button -->
    <div class="row justify-content-center">
        <div class="col-md-8 text-end">
            <button class="btn btn-success shadow-sm" data-bs-toggle="modal" data-bs-target="#movePatientModal">
                <i class="bi bi-arrow-repeat me-1"></i> Move Patient
            </button>
        </div>
    </div>
    <!-- Back Button -->
    <div class="text-center mt-4">
        <a asp-action="PatientList" asp-controller="Doctor" class="btn btn-secondary px-4">
            <i class="bi bi-arrow-left-circle me-1"></i> Back 
        </a>
    </div>
</div>

<!-- Move Patient Modal -->
<div class="modal fade" id="movePatientModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content shadow-lg">
            <form asp-action="MovePatient" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-arrows-move me-2"></i> Move Patient
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="AdmissionID" value="@Model.AdmissionId" />

                    <div class="mb-3">
                        <label for="WardId" class="form-label fw-bold">Select New Location</label>
                        <select class="form-select shadow-sm" id="WardId" name="WardId" required>
                            <option value="">-- Select Location --</option>
                            @foreach (var loc in Model.AvailableWards)
                            {
                                <option value="@loc.WardId">@loc.WardName</option>
                            }
                        </select>
                        <span asp-validation-for="WardId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Notes" class="form-label fw-bold">Notes</label>
                        <textarea class="form-control shadow-sm" id="Notes" name="Notes" rows="3"
                                  placeholder="Enter reason or additional notes..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i> Confirm Move
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
                var toastEl = document.getElementById("toastMessage");
                if (toastEl) {
                    var toast = new bootstrap.Toast(toastEl);
                    toast.show();
                }
            });
    </script>       
}



